{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2015", "dom"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "maxNodeModuleJsDepth": 1,
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "outDir": "./dist/",
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src",
    ".storybook",
    "jest.config.ts",
    "jest.setup.ts",
    "webpack.config.ts",
    "src/**/*.test.tsx"
  ],
  "exclude": ["dist", "node_modules", "storybook-static", "coverage"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
